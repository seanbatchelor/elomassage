---
interface Props {
  class?: string;
  width?: 'narrow' | 'normal' | 'wide' | 'full';
}

const { 
  class: className = '',
  width = 'normal'
} = Astro.props;

const widthStyles = {
  narrow: 'max-w-reading',
  normal: 'max-w-3xl',
  wide: 'max-w-breakout',
  full: 'max-w-full'
};
---

<section class={`mx-auto px-4 py-12 md:py-16 ${widthStyles[width]} ${className}`}>
  <slot />
</section>
