---
interface Props {
  href?: string;
  size?: 'medium' | 'large';
  class?: string;
}

const { 
  href = '#',
  size = 'large',
  class: className = '' 
} = Astro.props;

const sizeStyles = {
  medium: 'text-xl',      // Similar to h3
  large: 'text-2xl md:text-3xl'  // Larger variant
};
---

<a 
  href={href} 
  class={`font-serif font-semibold underline decoration-1 underline-offset-4 text-sage hover:opacity-70 transition-opacity ${sizeStyles[size]} ${className}`}
>
  <slot />
</a>
